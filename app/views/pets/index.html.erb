<h1>All Pets</h1>

<div class="columns small-12">
  <%= link_to 'Start an Application', applications_new_path %>
  <%= form_with url: "/pets", method: :get, local: true do |f| %>
    <%= f.label :search %>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
  <% end %>
</div>


<% @pets.each do |pet| %>
  <div class="card columns small-2">
    <h3><%= link_to pet.name, pets_show_path(pet) %></h3>
    <p>Age: <%= pet.age %></p>
    <p>Breed: <%= pet.breed %></p>
    <p>Adoptable: </p>
    <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
    <%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %>
    <%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
  </div>
<% end %>
